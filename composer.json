{
    "name": "stidges/country-flags",
    "description": "A small package to convert a country code to the corresponding country flag emoji",
    "keywords": [
        "country-flags",
        "countries",
        "country",
        "flag",
        "emoji",
        "unicode"
    ],
    "homepage": "https://github.com/stidges/country-flags",
    "license": "MIT",
    "authors": [
        {
            "name": "Stidges",
            "email": "info@stidges.com",
            "homepage": "https://stidges.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Stidges\\CountryFlags\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stidges\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "config": {
        "sort-packages": true
    }
}
